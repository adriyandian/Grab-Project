<phpunit
  bootstrap="bootstrap.php"
  backupGlobals="false"
  colors="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  >
  <testsuites>
    <testsuite name="models">
      <directory suffix="Test.php">tests/app/models/</directory>
    </testsuite>
    <testsuite name="controllers">
      <directory suffix="Test.php">tests/app/controllers/</directory>
    </testsuite>
  </testsuites>
</phpunit>
